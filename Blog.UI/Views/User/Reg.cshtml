@model Blog.Model.T_User

@{
    ViewBag.Title = "注册";
    Layout = "~/Views/Shared/navLayoutPage1.cshtml";
}
<script src="~/Scripts/user.js"></script>
<div class="container" style="margin-top:30px">
    <div class="col-md-6 col-md-offset-3">
        <form class="form-horizontal form-signin">
            <h2 class="form-signin-heading" style="margin-bottom:10px">请完善您的个人信息！</h2>
            <div class="form-group">
                <label for="inputUserName" class="col-sm-2 control-label">用户名</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="inputUName" name="UserName" placeholder="请输入用户名">
                </div>
            </div>
            <div class="form-group">
                <label for="inputUserPet" class="col-sm-2 control-label">昵称</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="inputUPet" name="UserPet" placeholder="请输入昵称">
                </div>
            </div>
            <div class="form-group">
                <label for="inputUserPassword" class="col-sm-2 control-label">密码</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" id="inputUPwd" name="UserPassword" placeholder="请输入密码">
                </div>
            </div>
            <div class="form-group">
                <label for="inputUserpwd2" class="col-sm-2 control-label">确认密码</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" placeholder="请确认密码">
                </div>
            </div>
            <div class="form-group">
                <label for="inputUserName" class="col-sm-2 control-label">性别</label>
                <div class="col-sm-10">
                    <select id="USex" name="UserSex" class="form-control">
                        <option>男</option>
                        <option>女</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label for="inputUserBirthday" class="col-sm-2 control-label">出生日期</label>
                <div class="col-sm-10">
                    <input type="date" class="form-control" id="inputUBr" name="UserBirthday">
                </div>
            </div>
            <div class="form-group">
                <label for="inputUserBirthplace" class="col-sm-2 control-label">出生地</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="inputUAdders" name="UserBirthplace" placeholder="请输入地址">
                </div>
            </div>
            <div class="form-group">
                <label for="inputUserEmail" class="col-sm-2 control-label">邮箱</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="inputEmail" name="UserMailbox" placeholder="请输入邮箱">
                </div>
            </div>
            <div class="form-group">
                <label for="inputUserQQ" class="col-sm-2 control-label">QQ</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="inputQQ" name="UserQQ" placeholder="请输入QQ">
                </div>
            </div>
            <div class="form-group">
                <label for="inputUserSig" class="col-sm-2 control-label">个人签名</label>
                <div class="col-sm-10">
                    <textarea class="form-control" id="inputUserSig" name="UserSig" rows="2" style="resize:none" placeholder="请输入签名"></textarea>
                </div>
            </div>
            <div class="form-group">
                <button type="button" id="btnReg" class="form-control btn btn-info">注册</button>
            </div>
        </form>
    </div>
</div>

